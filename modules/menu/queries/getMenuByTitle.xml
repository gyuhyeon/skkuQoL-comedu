<query id="getMenuByTitle" action="select">
    <tables>
        <table name="menu" />
    </tables>
    <columns>
        <column name="*" />
    </columns>
    <conditions>
        <condition operation="in" column="title" var="title" notnull="notnull" />
        <condition operation="equal" column="site_srl" var="site_srl" default="0" pipe="and" />
    </conditions>
</query>
