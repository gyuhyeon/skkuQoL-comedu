    <tables>
        <table name="files" />
    </tables>
    <conditions>
        <condition operation="equal" column="upload_target_srl" var="upload_target_srl" filter="number" notnull="notnull" />
        <condition operation="equal" column="cover_image" default="Y" notnull="notnull" />
    </conditions>
</query>
