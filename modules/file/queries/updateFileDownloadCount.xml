<query id="updateDownloadCount" action="update">
    <tables>
        <table name="files" />
    </tables>
    <columns>
        <column name="download_count" var="download_count" default="plus(1)" />
    </columns>
    <conditions>
        <condition operation="equal" column="file_srl" var="file_srl" filter="number" notnull="notnull" />
    </conditions>
</query>
